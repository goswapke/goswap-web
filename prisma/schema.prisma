// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  TRAVELLER
  PARTNER
  ADMIN
}

enum ListingType {
  SWAP
  LEASE
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  password       String
  name           String?
  phone          String?
  role           Role            @default(TRAVELLER)
  createdAt      DateTime        @default(now())
  partnerProfile PartnerProfile?
  vehicles       Vehicle[]       @relation("OwnerVehicles")
}

model PartnerProfile {
  id                 String   @id @default(cuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id])
  businessName       String?
  // Payout config (PRIVATE)
  payoutMethod       String    @default("M-PESA") // or BANK
  mpesaNumber        String?
  bankAccountName    String?
  bankAccountNumber  String?
  bankName           String?
  bankBranch         String?
  commissionPct      Decimal   @default(0.12)
  status             String    @default("PENDING") // PENDING|APPROVED|SUSPENDED
  createdAt          DateTime  @default(now())
}

model Vehicle {
  id            String       @id @default(cuid())
  partnerId     String?
  partner       User?        @relation("OwnerVehicles", fields: [partnerId], references: [id])
  listingType   ListingType
  make          String
  model         String
  year          Int
  locationCity  String
  description   String?
  imageUrl      String?
  fuelType      String?
  transmission  String?
  status        String       @default("PENDING") // PENDING|APPROVED|HIDDEN
  createdAt     DateTime     @default(now())
}
